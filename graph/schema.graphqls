# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Role { 
  id: ID!,
  name: String!,
  description: String
}

type Query {
  roles: [Role!]!, 
  role(id: ID!): Role
}

input NewRole {
  name: String!,
  description: String
}

input UpdateRole {
  id: ID!,
  name: String,
  description: String
}

type Mutation {
    createRole(input: NewRole!): Role!
    updateRole(input: UpdateRole!): Role!
    deleteRole(id: ID!): Boolean!
}
